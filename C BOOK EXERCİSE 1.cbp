#include <stdio.h>
#include <stdlib.h>
#define PI 3.14159
int main(){
    double radius,area,circumf;
    int num_circle,i;
    printf("How many circles do you want to calculate?: ");
    scanf("%d",&num_circle);
    printf("\n");
    int n=num_circle;
    for(i=0;i<n;i++){
        printf("Enter a radius for your %d . circle: ",i+1);
        scanf("%lf",&radius);
        circumf= PI*2*radius;
        area= PI*radius*radius;
        printf("Area: %lf \nCircumference: %lf",area,circumf);
        printf("\n");

    }

    return 0;
}
